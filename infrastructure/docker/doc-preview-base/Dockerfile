FROM node:10.20.0-buster-slim

# Installs git, unoconv and chinese fonts
RUN apt-get update && apt-get -y install \
    cabextract \
    curl \
    git \
    unoconv \
    ttf-wqy-zenhei \
    fonts-arphic-ukai \
    fonts-arphic-uming \
    fonts-indic \ 
    xfonts-utils \
&& rm -rf /var/lib/apt/lists/* 

ADD add-ms-fonts.sh /tmp
RUN chmod +x /tmp/add-ms-fonts.sh && mkdir ~/.fonts/ && /tmp/add-ms-fonts.sh
